- content_tag_for :div, <%= singular_name %> do
%ul
<% for attribute in attributes -%>
  %li
    %strong <%= attribute.column.human_name %>:
    =h <%= singular_name %>.<%= attribute.name %>
<% end -%>
  = link_to t('Show'), <%= singular_name %>
  = link_to t('Edit'), edit_<%= singular_name %>_path(<%= singular_name %>)
  = link_to t('Delete'), <%= singular_name %>, :confirm => t('Are you sure'), :method => :delete
